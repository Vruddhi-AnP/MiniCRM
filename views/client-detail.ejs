
 <!DOCTYPE html>
<html>
<head>
  <title>Client Detail</title>
</head>
<body>

<a href="/clients">⬅ Back to Clients</a>

<h2>Client Details</h2>

<h3><%= client.name %></h3>

<p><b>Company:</b> <%= client.company || "-" %></p>
<p><b>Email:</b> <%= client.email || "-" %></p>
<p><b>Phone:</b> <%= client.phone || "-" %></p>
<p><b>Address:</b> <%= client.address || "-" %></p>

<hr>

<h3>Contacts</h3>
<ul>
  <% if (contacts.length === 0) { %>
    <li>No contacts</li>
  <% } %>
  <% contacts.forEach(c => { %>
    <li><%= c.name %> — <%= c.email || "no email" %></li>
  <% }) %>
</ul>

<hr>

<h3>Tasks</h3>
<ul>
  <% if (tasks.length === 0) { %>
    <li>No tasks</li>
  <% } %>
  <% tasks.forEach(t => { %>
    <li><%= t.title %> (<%= t.status %>)</li>
  <% }) %>
</ul>

<hr>

<h3>Invoices</h3>
<ul>
  <% if (invoices.length === 0) { %>
    <li>No invoices</li>
  <% } %>
  <% invoices.forEach(i => { %>
    <li>
      <%= i.invoice_number %> — ₹<%= i.amount %> (<%= i.status %>)
    </li>
  <% }) %>
</ul>

</body>
</html>

