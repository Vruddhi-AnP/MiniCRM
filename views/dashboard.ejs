<%- include("layout", {
  body: `
    <h1>Welcome, ${user.email}</h1>

    <h2 class="mb-4">Dashboard Summary</h2>

    <!-- ================= CARDS ================= -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Active Clients</h5>
            <h2>${clients}</h2>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Open Tasks</h5>
            <h2>${tasks}</h2>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Total Invoices</h5>
            <h2>${invoices.length}</h2>
          </div>
        </div>
      </div>
    </div>

    <!-- ================= LATEST CLIENTS ================= -->
    <h4>Latest Clients</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        ${
          latestClients.length === 0
            ? `<tr><td colspan="3">No clients found</td></tr>`
            : latestClients.map(c => `
                <tr>
                  <td>${c.name}</td>
                  <td>${c.email || "-"}</td>
                  <td>${c.status}</td>
                </tr>
              `).join("")
        }
      </tbody>
    </table>

    <!-- ================= UPCOMING TASKS ================= -->
    <h4 class="mt-4">Upcoming Tasks</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Client</th>
          <th>Status</th>
          <th>Due Date</th>
        </tr>
      </thead>
      <tbody>
        ${
          upcomingTasks.length === 0
            ? `<tr><td colspan="4">No upcoming tasks</td></tr>`
            : upcomingTasks.map(t => `
                <tr>
                  <td>${t.title}</td>
                  <td>${t.client_name || "-"}</td>
                  <td>${t.status}</td>
                  <td>${t.due_date || "-"}</td>
                </tr>
              `).join("")
        }
      </tbody>
    </table>
  `
}) %>
