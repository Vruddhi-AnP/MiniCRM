<%- include("layout", {
  body: `
    <!-- ================= HEADER ================= -->
    <h1 class="mb-1">Welcome, ${user.email}</h1>
    <p class="text-muted mb-4">Here’s what’s happening in your CRM today</p>

    <h3 class="mb-4">Dashboard Overview</h3>

    <!-- ================= CARDS ================= -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h6 class="text-muted">Active Clients</h6>
            <h2 class="fw-bold">${clients}</h2>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h6 class="text-muted">Open Tasks</h6>
            <h2 class="fw-bold">${tasks}</h2>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-center shadow-sm">
          <div class="card-body">
            <h6 class="text-muted">Total Invoices</h6>
            <h2 class="fw-bold">${invoices.length}</h2>
          </div>
        </div>
      </div>
    </div>

    <!-- ================= LATEST CLIENTS ================= -->
    <h4 class="mb-3">Latest Clients</h4>
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        ${
          latestClients.length === 0
            ? `<tr><td colspan="3">No clients found</td></tr>`
            : latestClients.map(c => `
                <tr>
                  <td>${c.name}</td>
                  <td>${c.email || "-"}</td>
                  <td>${c.status}</td>
                </tr>
              `).join("")
        }
      </tbody>
    </table>

    <!-- ================= UPCOMING TASKS ================= -->
    <h4 class="mt-5 mb-3">Upcoming Tasks</h4>
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Title</th>
          <th>Client</th>
          <th>Status</th>
          <th>Due Date</th>
        </tr>
      </thead>
      <tbody>
        ${
          upcomingTasks.length === 0
            ? `<tr><td colspan="4">No upcoming tasks</td></tr>`
            : upcomingTasks.map(t => `
                <tr>
                  <td>${t.title}</td>
                  <td>${t.client_name || "-"}</td>
                  <td>${t.status}</td>
                  <td>
                    ${
                      t.due_date
                        ? new Date(t.due_date).toISOString().slice(0, 10)
                        : "-"
                    }
                  </td>
                </tr>
              `).join("")
        }
      </tbody>
    </table>
  `
}) %>
